{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/cyoa-schema.json",
  "title": "CYOA Data Schema",
  "description": "Schema for Choose Your Own Adventure (CYOA) data structure",
  "type": "object",
  "required": ["setup", "title", "intro", "choices", "style"],
  "properties": {
    "setup": {
      "type": "object",
      "description": "Configuration and setup information for the CYOA",
      "required": ["viewer-version", "points", "hideGitLink", "altLink", "altLinkText", "effectOrdering"],
      "properties": {
        "viewer-version": {
          "type": "string",
          "description": "Version of the viewer being used",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "points": {
          "type": "array",
          "description": "Array of point types available in the CYOA",
          "items": {
            "type": "object",
            "required": ["startValue", "fullName", "name", "icon"],
            "properties": {
              "startValue": {
                "type": "integer",
                "description": "Initial value for this point type"
              },
              "fullName": {
                "type": "string",
                "description": "Full name of the point type"
              },
              "name": {
                "type": "string",
                "description": "Short name/abbreviation for the point type"
              },
              "icon": {
                "type": "string",
                "description": "Path to the icon for this point type",
                "pattern": "^/icons/.*\\.(png|jpg|jpeg|gif|svg|webp)$"
              }
            }
          }
        },
        "hideGitLink": {
          "type": "boolean",
          "description": "Whether to hide the git link"
        },
        "altLink": {
          "type": "string",
          "format": "uri",
          "description": "Alternative link URL"
        },
        "altLinkText": {
          "type": "string",
          "description": "Text to display for the alternative link"
        },
        "effectOrdering": {
          "type": "array",
          "description": "Order in which effects should be displayed",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "title": {
      "type": "object",
      "description": "Title and metadata for the CYOA",
      "required": ["cyoaName", "tagline", "author", "version"],
      "properties": {
        "cyoaName": {
          "type": "string",
          "description": "Name of the CYOA"
        },
        "tagline": {
          "type": "string",
          "description": "Subtitle or tagline for the CYOA"
        },
        "author": {
          "type": "string",
          "description": "Author of the CYOA"
        },
        "version": {
          "type": "string",
          "description": "Version of the CYOA",
          "pattern": "^\\d+\\.\\d+$"
        }
      }
    },
    "intro": {
      "type": "object",
      "description": "Introduction section of the CYOA",
      "required": ["title", "introText", "subtitle", "baseImage"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the introduction"
        },
        "introText": {
          "type": "string",
          "description": "Main introduction text"
        },
        "subtitle": {
          "type": "string",
          "description": "Subtitle for the introduction"
        },
        "baseImage": {
          "type": "string",
          "description": "Path to the base image",
          "pattern": "^/images/.*\\.(png|jpg|jpeg|gif|svg|webp)$"
        }
      }
    },
    "choices": {
      "type": "array",
      "description": "Array of choice sections in the CYOA",
      "items": {
        "type": "object",
        "required": ["title", "description", "style", "maxChoices", "options"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the choice section"
          },
          "description": {
            "type": "string",
            "description": "Description of the choice section"
          },
          "style": {
            "type": "string",
            "enum": ["list", "boxes"],
            "description": "Display style for the choices"
          },
          "choicesUnique": {
            "type": "boolean",
            "description": "Whether choices in this section are unique"
          },
          "maxChoices": {
            "type": "integer",
            "minimum": 1,
            "description": "Maximum number of choices allowed"
          },
          "applyToPlayerImage": {
            "type": "boolean",
            "description": "Whether choices affect the player image"
          },
          "options": {
            "type": "array",
            "description": "Available options in this choice section",
            "items": {
              "type": "object",
              "required": ["title", "description", "cost", "effects"],
              "properties": {
                "title": {
                  "type": "string",
                  "description": "Title of the option"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the option"
                },
                "image": {
                  "type": "string",
                  "description": "Path to the option image",
                  "pattern": "^/images/.*\\.(png|jpg|jpeg|gif|svg|webp)$"
                },
                "cost": {
                  "type": "array",
                  "description": "Cost array with values for each point type",
                  "items": {
                    "type": "integer"
                  },
                  "minItems": 1
                },
                "unique": {
                  "type": "boolean",
                  "description": "Whether this option is unique (can only be selected once)"
                },
                "effects": {
                  "type": "array",
                  "description": "Effects that occur when this option is selected",
                  "items": {
                    "type": "object",
                    "required": ["type", "key", "data"],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["uniqueString", "list"],
                        "description": "Type of effect"
                      },
                      "key": {
                        "type": "string",
                        "description": "Key for the effect"
                      },
                      "data": {
                        "oneOf": [
                          {
                            "type": "string",
                            "description": "String data for uniqueString effects"
                          },
                          {
                            "type": "object",
                            "description": "Object data for list effects",
                            "required": ["quantity", "name"],
                            "properties": {
                              "quantity": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Quantity of the item"
                              },
                              "name": {
                                "type": "string",
                                "description": "Name of the item"
                              }
                            }
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "style": {
      "type": "object",
      "description": "Styling configuration for the CYOA",
      "required": ["import", "text", "paragraph", "main", "sidebar", "css"],
      "properties": {
        "import": {
          "type": "object",
          "description": "CSS imports",
          "required": ["text"],
          "properties": {
            "text": {
              "type": "string",
              "format": "uri",
              "description": "CSS import URL"
            }
          }
        },
        "text": {
          "type": "object",
          "description": "Text styling configuration",
          "required": ["familyMain", "rootSize", "textColor"],
          "properties": {
            "familyMain": {
              "type": "string",
              "description": "Main font family"
            },
            "rootSize": {
              "type": "string",
              "description": "Root font size",
              "pattern": "^\\d+px$"
            },
            "textColor": {
              "type": "string",
              "description": "Text color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        },
        "paragraph": {
          "type": "object",
          "description": "Paragraph styling configuration",
          "required": ["lineHeight", "letterSpacing", "fontFamily"],
          "properties": {
            "lineHeight": {
              "type": "string",
              "description": "Line height"
            },
            "letterSpacing": {
              "type": "string",
              "description": "Letter spacing",
              "pattern": "^\\d+\\.\\d+px$"
            },
            "fontFamily": {
              "type": "string",
              "description": "Font family for paragraphs"
            }
          }
        },
        "main": {
          "type": "object",
          "description": "Main area styling configuration",
          "required": [
            "backgroundColor", "textColor", "cardColor", "cardBorderColor",
            "cardBorderRadius", "cardBorderWidth", "boxBg", "unselectionBorder",
            "unselectionBg", "unselectionBoxBorder", "unselectionBoxBg",
            "selectionBorder", "selectionBg", "imageBorder"
          ],
          "properties": {
            "backgroundColor": {
              "type": "string",
              "description": "Background color or gradient"
            },
            "textColor": {
              "type": "string",
              "description": "Text color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "cardColor": {
              "type": "string",
              "description": "Card background color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "cardBorderColor": {
              "type": "string",
              "description": "Card border color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "cardBorderRadius": {
              "type": "string",
              "description": "Card border radius"
            },
            "cardBorderWidth": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "string"
                }
              ],
              "description": "Card border width"
            },
            "boxBg": {
              "type": "string",
              "description": "Box background color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "unselectionBorder": {
              "type": "string",
              "description": "Border for unselected items"
            },
            "unselectionBg": {
              "type": "string",
              "description": "Background for unselected items"
            },
            "unselectionBoxBorder": {
              "type": "string",
              "description": "Box border for unselected items"
            },
            "unselectionBoxBg": {
              "type": "string",
              "description": "Box background for unselected items",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "selectionBorder": {
              "type": "string",
              "description": "Border for selected items"
            },
            "selectionBg": {
              "type": "string",
              "description": "Background for selected items",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "imageBorder": {
              "type": "string",
              "description": "Image border color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            }
          }
        },
        "sidebar": {
          "type": "object",
          "description": "Sidebar styling configuration",
          "required": ["backgroundColor", "textColor", "cardColor", "cardBorderColor", "cardBorderRadius", "cardBorderWidth"],
          "properties": {
            "backgroundColor": {
              "type": "string",
              "description": "Background color or gradient"
            },
            "textColor": {
              "type": "string",
              "description": "Text color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "cardColor": {
              "type": "string",
              "description": "Card background color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "cardBorderColor": {
              "type": "string",
              "description": "Card border color",
              "pattern": "^#[0-9A-Fa-f]{6}$"
            },
            "cardBorderRadius": {
              "type": "string",
              "description": "Card border radius"
            },
            "cardBorderWidth": {
              "oneOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "string"
                }
              ],
              "description": "Card border width"
            }
          }
        },
        "css": {
          "type": "string",
          "description": "Additional CSS rules"
        }
      }
    }
  },
  "additionalProperties": false
} 